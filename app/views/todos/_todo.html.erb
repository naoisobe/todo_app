<div id="<%= dom_id(todo) %>" class="group bg-gray-50 hover:bg-white transition-colors rounded-xl p-4 border border-gray-100 hover:border-gray-200 hover:shadow-md">
  <div class="flex items-center gap-4">
    <!-- Checkbox -->
    <div class="flex-shrink-0">
      <%= form_with model: todo, url: todo_path(todo), method: :patch, local: false, html: { class: "flex items-center" } do |f| %>
        <%= f.check_box :completed, 
            checked: todo.completed, 
            onchange: 'this.form.submit()',
            class: "w-5 h-5 text-blue-600 bg-white border-2 border-gray-300 rounded focus:ring-blue-500 focus:ring-2 transition-all" %>
      <% end %>
    </div>
    
    <!-- Todo Title -->
    <div class="flex-1 min-w-0">
      <span class="text-gray-800 <%= 'line-through text-gray-500' if todo.completed %> transition-all">
        <%= todo.title %>
      </span>
    </div>
    
    <!-- Action Buttons -->
    <div class="flex gap-2 opacity-0 group-hover:opacity-100 transition-opacity">
      <%= link_to edit_todo_path(todo), 
          data: { turbo_stream: true }, 
          class: "p-2 text-gray-500 hover:text-blue-600 hover:bg-blue-50 rounded-lg transition-all",
          title: "Edit" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
        </svg>
      <% end %>
      
      <%= button_to todo_path(todo), 
          method: :delete, 
          form: { data: { turbo: true } },
          class: "p-2 text-gray-500 hover:text-red-600 hover:bg-red-50 rounded-lg transition-all",
          title: "Delete",
          data: { confirm: "Are you sure?" } do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
        </svg>
      <% end %>
    </div>
  </div>
</div>
